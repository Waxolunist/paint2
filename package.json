{
  "name": "paint2",
  "version": "1.2.1",
  "contributors": [
    "Christian Sterzl <christian.sterzl@gmail.com>"
  ],
  "license": "BSD-3-Clause",
  "repository": "Waxolunist/paint2",
  "description": "Paint for Kids",
  "main": "paint-app.js",
  "module": "paint-app.js",
  "type": "module",
  "scripts": {
    "bundle": "npm run clean && NODE_ENV=production node esbuild.config.js",
    "clean": "rimraf bundle/* build/* coverage/* *.tsbuildinfo",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:warningson": "npm run lint:lit-analyzer && npm run lint:eslint:warningson",
    "lint:eslint:warningson": "eslint 'src/**/*.ts'",
    "lint:eslint": "eslint --quiet 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier 'src' '*.cjs' '*.js' '*.json' '*.mjs' 'cypress/**/*.js' --write",
    "format:check": "prettier 'src' '*.cjs' '*.js' '*.json' '*.mjs' 'cypress/**/*.js' --check",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile build/custom-elements.json",
    "start": "npm run serve",
    "serve": "web-dev-server --config web-dev-server.config.mjs --watch --open",
    "serve:nowatch": "web-dev-server --config web-dev-server.config.mjs",
    "serve:bundle": "npm run bundle && web-dev-server --config web-dev-server.build.mjs",
    "test": "jest --maxWorkers=${JEST_MAX_WORKERS:-4}",
    "test:update-snapshots": "jest --updateSnapshot --maxWorkers=${JEST_MAX_WORKERS:-4}",
    "test:coverage": "jest --collectCoverage --maxWorkers=${JEST_MAX_WORKERS:-4}",
    "test:cy": "start-server-and-test serve:nowatch tcp:8000 test:cy:run",
    "test:cy:run": "cypress run",
    "test:cy:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:cy",
    "docker:build": "npm run bundle && docker build . -t waxolunist/paint2:latest",
    "docker:run": "docker run -p 8000:8043 waxolunist/paint2:latest",
    "twa:build": "cd android && bubblewrap build --skipPwaValidation"
  },
  "pre-commit": [
    "format:check",
    "lint"
  ],
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Christian Sterzl",
  "dependencies": {
    "@lit-labs/motion": "^1.0.6",
    "@lit/reactive-element": "^2.0.2",
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-snackbar": "^0.27.0",
    "dexie": "^3.2.4",
    "lit": "^3.1.0",
    "lit-redux-router": "^0.21.0",
    "o9n": "^2.1.1",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "workbox-sw": "^7.0.0",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@bubblewrap/cli": "^1.21.0",
    "@esbuilder/html": "^0.0.6",
    "@open-wc/testing-helpers": "^3.0.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/offscreencanvas": "^2019.7.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@web/dev-server": "^0.4.1",
    "@web/dev-server-esbuild": "^1.0.1",
    "@web/dev-server-rollup": "^0.6.1",
    "brotli": "^1.3.3",
    "copyfiles": "^2.4.1",
    "cypress": "^13.6.1",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "eslint-plugin-cypress": "^2.15.1",
    "fake-indexeddb": "^5.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jsdom-testing-mocks": "^1.11.0",
    "koa-history-api-fallback": "^1.0.0",
    "lit-analyzer": "^2.0.2",
    "pepjs": "^0.5.3",
    "pre-commit": "^1.2.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "start-server-and-test": "^2.0.3",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "web-component-analyzer": "^2.0.0",
    "workbox-build": "^7.0.0"
  },
  "engines": {
    "node": ">= 20",
    "pnpm": ">=8"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "pnpm": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "lit@2.x.x": ">=3.1.0",
      "ejs@3.1.6": "3.1.7",
      "@babel/traverse@7.17.0": "7.23.2",
      "terser@5.10.0": "5.14.2",
      "json5@2.2.0": "2.2.2",
      "node-forge@1.2.1": "1.3.0",
      "xml2js@0.4.23": "0.5.0",
      "semver@6.3.0": "6.3.1",
      "semver@7.0.0": "7.5.2"
    }
  }
}
