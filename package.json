{
  "name": "paint2",
  "version": "1.0.0",
  "contributors": [
    "Christian Sterzl <christian.sterzl@gmail.com>"
  ],
  "license": "BSD-3-Clause",
  "repository": "Waxolunist/paint2",
  "description": "Paint for Kids",
  "main": "paint-app.js",
  "module": "paint-app.js",
  "type": "module",
  "scripts": {
    "bundle": "npm run clean && NODE_ENV=production rollup -c",
    "bundle:tests": "npm run bundle && npm run test:all",
    "watch": "npm run clean && rollup -c && chokidar 'src/**/*.*' -c 'rollup -c'",
    "clean": "rimraf bundle/* build/*",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:warningson": "npm run lint:lit-analyzer && npm run lint:eslint:warningson",
    "lint:eslint:warningson": "eslint 'src/**/*.ts'",
    "lint:eslint": "eslint --quiet 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier 'src' '*.cjs' '*.js' '*.json' 'cypress/**/*.js' --write",
    "format:check": "prettier 'src' '*.cjs' '*.js' '*.json' 'cypress/**/*.js' --check",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile build/custom-elements.json",
    "start": "npm run serve",
    "serve": "es-dev-server --config es-dev-server.config.cjs --watch --open",
    "serve:nowatch": "es-dev-server --config es-dev-server.config.cjs > /dev/null",
    "serve:bundle": "npm run bundle && es-dev-server --config es-dev-server.build.cjs",
    "test": "jest",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:coverage": "jest --collectCoverage",
    "test:cy": "start-server-and-test serve:nowatch tcp:8000 test:cy:run",
    "test:cy:run": "cypress run",
    "test:cy:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:cy",
    "docker:build": "npm run bundle && docker build . -t waxolunist/paint2:latest",
    "docker:run": "docker run -p 8000:8043 waxolunist/paint2:latest"
  },
  "pre-commit": [
    "format:check",
    "lint"
  ],
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Christian Sterzl",
  "dependencies": {
    "dexie": "^3.0.2",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "lit-redux-router": "^0.15.2",
    "o9n": "^2.1.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@open-wc/testing": "^2.5.32",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/jest": "^26.0.15",
    "@types/rewire": "^2.5.28",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "chokidar-cli": "^2.1.0",
    "cypress": "^5.6.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.8",
    "eslint": "^7.13.0",
    "eslint-plugin-cypress": "^2.11.2",
    "fake-indexeddb": "^3.1.2",
    "jest": "^26.6.3",
    "koa-history-api-fallback": "^1.0.0",
    "lit-analyzer": "^1.2.1",
    "pepjs": "^0.5.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.2",
    "rewire": "^5.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-web-worker-loader": "^1.4.0",
    "rollup-plugin-workbox": "^5.2.1",
    "start-server-and-test": "^1.11.5",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "web-component-analyzer": "^1.1.6",
    "wrench": "^1.5.9",
    "zen-observable": "^0.8.15"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transformIgnorePatterns": [],
    "testPathIgnorePatterns": [
      "cypress"
    ],
    "setupFilesAfterEnv": [
      "./setupEvents.cjs"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 80,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">= 12 <= 15",
    "npm": ">= 6 <= 7"
  }
}
