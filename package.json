{
  "name": "paint2",
  "version": "1.0.0",
  "contributors": [
    "Christian Sterzl <christian.sterzl@gmail.com>"
  ],
  "license": "BSD-3-Clause",
  "repository": "Waxolunist/paint2",
  "description": "Paint for Kids",
  "main": "paint-app.js",
  "module": "paint-app.js",
  "type": "module",
  "scripts": {
    "bundle": "npm run clean && rollup -c",
    "watch": "rollup -cw",
    "clean": "rimraf bundle/* test-bundle/*",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier 'src' '*.cjs' '*.js' '*.json' --write",
    "format:check": "prettier 'src' '*.cjs' '*.js' '*.json' --check",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:clean": "rimraf docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file docs/my-element.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "es-dev-server --root-dir=docs --node-resolve --watch",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile build/custom-elements.json",
    "serve": "es-dev-server --config es-dev-server.config.cjs",
    "serve:bundle": "npm run bundle && es-dev-server --config es-dev-server.test.js",
    "test": "karma start karma.conf.cjs --browsers ChromeHeadlessNoSandbox",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false --browsers Chrome",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots --browsers ChromeHeadlessNoSandbox",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots --browsers ChromeHeadlessNoSandbox"
  },
  "pre-commit": [
    "format:check",
    "lint"
  ],
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Christian Sterzl",
  "dependencies": {
    "cypress": "^5.1.0",
    "dexie": "^3.0.2",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "lit-redux-router": "^0.15.1",
    "o9n": "^2.1.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-private-property-in-object": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@open-wc/testing": "^2.5.25",
    "@open-wc/testing-karma": "^4.0.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "acorn": "^8.0.1",
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.4",
    "eslint": "^7.8.1",
    "karma": "^5.2.2",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-snapshot": "^0.2.1",
    "karma-snapshot": "^0.6.0",
    "koa-history-api-fallback": "^1.0.0",
    "lit-analyzer": "^1.2.1",
    "mocha": "^8.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-web-worker-loader": "^1.3.1",
    "rollup-plugin-workbox": "^5.2.1",
    "sinon": "^9.0.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2",
    "web-component-analyzer": "^1.1.6",
    "wrench": "^1.5.9"
  }
}
