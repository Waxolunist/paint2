{
  "name": "paint2",
  "version": "1.0.0",
  "contributors": [
    "Christian Sterzl <christian.sterzl@gmail.com>"
  ],
  "license": "BSD-3-Clause",
  "repository": "Waxolunist/paint2",
  "description": "Paint for Kids",
  "main": "paint-app.js",
  "module": "paint-app.js",
  "type": "module",
  "scripts": {
    "bundle": "npm run clean && rollup -c",
    "bundle:tests": "npm run bundle && npm run test:all",
    "watch": "rollup -cw",
    "clean": "rimraf bundle/* build/*",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier 'src' '*.cjs' '*.js' '*.json' 'cypress/**/*.js' --write",
    "format:check": "prettier 'src' '*.cjs' '*.js' '*.json' 'cypress/**/*.js' --check",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile build/custom-elements.json",
    "serve": "es-dev-server --config es-dev-server.config.cjs --watch --open",
    "serve:nowatch": "es-dev-server --config es-dev-server.config.cjs > /dev/null",
    "serve:bundle": "npm run bundle && es-dev-server --config es-dev-server.build.cjs",
    "test": "karma start karma.conf.cjs --browsers ChromeHeadlessNoSandbox",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false --browsers Chrome",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots --browsers ChromeHeadlessNoSandbox",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots --browsers ChromeHeadlessNoSandbox",
    "test:cy": "start-server-and-test serve:nowatch tcp:8000 test:cy:run",
    "test:cy:run": "cypress run",
    "test:cy:open": "cypress open",
    "test:all": "npm run test && npm run test:cy",
    "docker:build": "npm run bundle && docker build . -t waxolunist/paint2:latest",
    "docker:run": "docker run -p 8000:8043 waxolunist/paint2:latest"
  },
  "pre-commit": [
    "format:check",
    "lint"
  ],
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Christian Sterzl",
  "dependencies": {
    "dexie": "^3.0.2",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "lit-redux-router": "^0.15.1",
    "o9n": "^2.1.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@jest-runner/electron": "^3.0.0",
    "@open-wc/testing": "^2.5.25",
    "@open-wc/testing-karma": "^4.0.5",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/chai": "^4.2.12",
    "@types/jest": "^26.0.14",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "chai": "^4.2.0",
    "cypress": "^5.1.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.4",
    "eslint": "^7.8.1",
    "eslint-plugin-cypress": "^2.11.1",
    "jest": "^26.4.2",
    "karma": "^5.2.2",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-snapshot": "^0.2.1",
    "karma-snapshot": "^0.6.0",
    "karma-typescript": "^5.2.0",
    "koa-history-api-fallback": "^1.0.0",
    "lit-analyzer": "^1.2.1",
    "mocha": "^8.1.3",
    "pepjs": "^0.5.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-web-worker-loader": "^1.3.1",
    "rollup-plugin-workbox": "^5.2.1",
    "sinon": "^9.0.3",
    "start-server-and-test": "^1.11.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2",
    "web-component-analyzer": "^1.1.6",
    "wrench": "^1.5.9",
    "zen-observable": "^0.8.15"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transformIgnorePatterns": [],
    "testPathIgnorePatterns": [
      "cypress"
    ],
    "setupFilesAfterEnv": [
      "./setupEvents.cjs"
    ]
  }
}
