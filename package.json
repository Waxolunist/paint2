{
  "name": "paint2",
  "version": "1.2.0",
  "contributors": [
    "Christian Sterzl <christian.sterzl@gmail.com>"
  ],
  "license": "BSD-3-Clause",
  "repository": "Waxolunist/paint2",
  "description": "Paint for Kids",
  "main": "paint-app.js",
  "module": "paint-app.js",
  "type": "module",
  "scripts": {
    "bundle": "npm run clean && NODE_ENV=production rollup -c",
    "bundle:test": "NODE_ENV=test rollup -c",
    "watch": "npm run clean && rollup -c && chokidar 'src/**/*.*' -c 'rollup -c'",
    "clean": "rimraf bundle/* build/* coverage/* .rollup.cache/* *.tsbuildinfo",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:warningson": "npm run lint:lit-analyzer && npm run lint:eslint:warningson",
    "lint:eslint:warningson": "eslint 'src/**/*.ts'",
    "lint:eslint": "eslint --quiet 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier 'src' '*.cjs' '*.js' '*.json' 'cypress/**/*.js' --write",
    "format:check": "prettier 'src' '*.cjs' '*.js' '*.json' 'cypress/**/*.js' --check",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile build/custom-elements.json",
    "start": "npm run serve",
    "serve": "web-dev-server --config web-dev-server.config.mjs --watch --open",
    "serve:nowatch": "npm run bundle:test && web-dev-server --config web-dev-server.config.mjs > /dev/null",
    "serve:bundle": "npm run bundle && web-dev-server --config web-dev-server.build.mjs",
    "test": "jest",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:coverage": "jest --collectCoverage",
    "test:cy": "start-server-and-test serve:nowatch tcp:8000 test:cy:run",
    "test:cy:run": "cypress run",
    "test:cy:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:cy",
    "docker:build": "npm run bundle && docker build . -t waxolunist/paint2:latest",
    "docker:run": "docker run -p 8000:8043 waxolunist/paint2:latest",
    "twa:build": "cd android && bubblewrap build --skipPwaValidation"
  },
  "pre-commit": [
    "format:check",
    "lint"
  ],
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Christian Sterzl",
  "dependencies": {
    "@material/mwc-button": "^0.22.1",
    "@material/mwc-icon-button": "^0.22.1",
    "@material/mwc-snackbar": "^0.22.1",
    "dexie": "^3.0.3",
    "lit": "> 2.0.0 || >= 2.0.0-rc.3",
    "lit-redux-router": "^0.19.2",
    "o9n": "^2.1.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@bubblewrap/cli": "^1.13.4",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.1",
    "@types/rewire": "^2.5.28",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@web/dev-server": "^0.1.22",
    "chokidar-cli": "^3.0.0",
    "cypress": "^8.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-cypress": "^2.11.3",
    "fake-indexeddb": "^3.1.3",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "koa-history-api-fallback": "^1.0.0",
    "lit-analyzer": "^1.2.1",
    "pepjs": "^0.5.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-brotli": "^3.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-web-worker-loader": "^1.6.1",
    "rollup-plugin-workbox": "^6.2.0",
    "sinon": "^11.1.2",
    "start-server-and-test": "^1.13.1",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "web-component-analyzer": "^1.1.6"
  },
  "engines": {
    "node": ">= 12 <= 15",
    "npm": ">= 6 <= 7"
  }
}
