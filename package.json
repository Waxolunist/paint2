{
  "name": "paint2",
  "version": "1.2.1",
  "contributors": [
    "Christian Sterzl <christian.sterzl@gmail.com>"
  ],
  "license": "BSD-3-Clause",
  "repository": "Waxolunist/paint2",
  "description": "Paint for Kids",
  "main": "paint-app.js",
  "module": "paint-app.js",
  "type": "module",
  "scripts": {
    "bundle": "npm run clean && NODE_ENV=production node esbuild.config.js",
    "clean": "rimraf bundle/* build/* coverage/* *.tsbuildinfo",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:warningson": "npm run lint:lit-analyzer && npm run lint:eslint:warningson",
    "lint:eslint:warningson": "eslint 'src/**/*.ts'",
    "lint:eslint": "eslint --quiet 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier 'src' '*.cjs' '*.js' '*.json' '*.mjs' 'cypress/**/*.js' --write",
    "format:check": "prettier 'src' '*.cjs' '*.js' '*.json' '*.mjs' 'cypress/**/*.js' --check",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile build/custom-elements.json",
    "start": "npm run serve",
    "serve": "web-dev-server --config web-dev-server.config.mjs --watch --open",
    "serve:nowatch": "web-dev-server --config web-dev-server.config.mjs",
    "serve:bundle": "npm run bundle && web-dev-server --config web-dev-server.build.mjs",
    "test": "jest --maxWorkers=${JEST_MAX_WORKERS:-4}",
    "test:update-snapshots": "jest --updateSnapshot --maxWorkers=${JEST_MAX_WORKERS:-4}",
    "test:coverage": "jest --collectCoverage --maxWorkers=${JEST_MAX_WORKERS:-4}",
    "test:cy": "start-server-and-test serve:nowatch tcp:8000 test:cy:run",
    "test:cy:run": "cypress run",
    "test:cy:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:cy",
    "docker:build": "npm run bundle && docker build . -t waxolunist/paint2:latest",
    "docker:run": "docker run -p 8000:8043 waxolunist/paint2:latest",
    "twa:build": "cd android && bubblewrap build --skipPwaValidation"
  },
  "pre-commit": [
    "format:check",
    "lint"
  ],
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Christian Sterzl",
  "dependencies": {
    "@lit-labs/motion": "^1.0.2",
    "@material/mwc-button": "^0.25.3",
    "@material/mwc-icon-button": "^0.25.3",
    "@material/mwc-snackbar": "^0.25.3",
    "dexie": "^3.2.0",
    "lit": "^2.1.3",
    "lit-redux-router": "^0.20.3",
    "o9n": "^2.1.1",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "workbox-sw": "^6.4.2",
    "workbox-window": "^6.4.2"
  },
  "devDependencies": {
    "@bubblewrap/cli": "^1.15.0",
    "@esbuilder/html": "0.0.3",
    "@open-wc/testing-helpers": "^2.0.4",
    "@rollup/plugin-replace": "^3.0.1",
    "@types/jest": "^27.4.0",
    "@types/offscreencanvas": "^2019.6.4",
    "@types/workbox-window": "^4.3.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@web/dev-server": "^0.1.29",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "^0.3.15",
    "brotli": "^1.3.2",
    "copyfiles": "^2.4.1",
    "cypress": "^9.4.1",
    "esbuild": "^0.14.21",
    "eslint": "^8.8.0",
    "eslint-plugin-cypress": "^2.12.1",
    "fake-indexeddb": "^3.1.7",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "koa-history-api-fallback": "^1.0.0",
    "lit-analyzer": "^1.2.1",
    "pepjs": "^0.5.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.2",
    "start-server-and-test": "^1.14.0",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "web-component-analyzer": "^1.1.6",
    "workbox-build": "^6.4.2"
  },
  "engines": {
    "node": ">= 12 <= 14",
    "pnpm": ">=6"
  },
  "volta": {
    "node": "14.18.2",
    "npm": "6.14.15"
  },
  "pnpm": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2"
    }
  }
}
